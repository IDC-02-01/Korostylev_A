<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103"/>
            <ColumnDefinition Width="414"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="button" Content="Ok" HorizontalAlignment="Left" Margin="106,240,0,155" Height="24" Width="100" Click="button_Click" Grid.Column="1"/>
        <TextBox 
            x:Name="textBox"
            Width="100" 
            Height="24"
            Margin="106,144,208,152"  Text="" AcceptsTab="True" Grid.Column="1"/>
        <TextBlock
           Height="24"
            Margin="106,97,196,199"
            Foreground="Red"
            Text="Введите имя" Grid.Column="1"/>

    </Grid>
</Window>
